{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es6","dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "target": "esnext",
        "outDir": "dist"
    },
    "exclude": ["dist", "node_modules", "test/types"]
}
